<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/rounded_edittext.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/md_blue_300" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="270dp" android:height="60dp" />
            <stroke android:width="3dp" android:color="@color/md_blue_300" />
        </shape>


    </item>
    <item android:state_pressed="false">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/md_blue_900" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="270dp" android:height="60dp" />
            <stroke android:width="3dp" android:color="@color/md_blue_900" />
        </shape>


    </item>
</selector>