<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dropdown"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c7d8e5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <Button
                android:id="@+id/btn_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_dialog"
                android:layout_margin="@dimen/margin_bottom"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:text="Disclaimer"
                android:textColor="@drawable/bg_button_textclicked"
                android:textSize="@dimen/title_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_dialog"
                android:layout_margin="@dimen/margin_bottom"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:text="Logout"
                android:textColor="@drawable/bg_button_textclicked"
                android:textSize="@dimen/title_text_size" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>