<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_main_port"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="#124191"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_list_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_code_of_conduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/code_of_conduct"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/title_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_dropdown"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_settings_white" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".002"
            android:background="#fff"
            android:orientation="horizontal"></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:background="@drawable/ic_background_company2"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05">


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".8"
                    android:background="@drawable/ic_background_blue_oppa">


                    <TextView
                        android:id="@+id/title_how_to_use_the_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Section 3\nCompany Property and\n Property Rights "
                        android:textColor="#fff"
                        android:textSize="@dimen/title_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"></LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05"></LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <include layout="@layout/include_company_policy" />

                            <include layout="@layout/include_company_rationale" />

                            <include layout="@layout/include_company_scope" />

                            <include layout="@layout/include_company_rules" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_penalties"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="Penalties"
                                    android:textColor="@color/blue_workplace"
                                    android:textSize="@dimen/title_text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"
                                        android:layout_gravity="center"
                                        android:layout_weight=".5"
                                        android:background="@color/blue_workplace" />

                                    <TextView
                                        android:id="@+id/tv_penalties_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="1"
                                        android:textColor="@color/blue_workplace"
                                        android:textSize="@dimen/title_text_size" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"
                                        android:layout_gravity="center"
                                        android:layout_weight=".5"
                                        android:background="@color/blue_workplace" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingBottom="20dp"
                                android:paddingTop="20dp">

                                <TextView
                                    android:id="@+id/tv_first_violation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Violation of numbers 1, 3, 5, 7, 8, 9,10,11,13"
                                    android:textColor="@color/blue_workplace"
                                    android:textSize="@dimen/text_size_buttons" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="20dp">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2">


                                    <TextView
                                        android:id="@+id/tv_penalties_1_first_offense"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".3"
                                        android:paddingRight="3dp"
                                        android:text="First Offense"
                                        android:textColor="@color/blue_workplace"
                                        android:textSize="@dimen/text_size_buttons" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".3"
                                    android:background="#f16325"
                                    android:gravity="center">

                                    <com.unilab.workplace.Utitlities.TextViewEx
                                        android:id="@+id/tv_penalties_1_first_offense_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:paddingBottom="30dp"
                                        android:text="@string/company_property_and_rights_1"
                                        android:textColor="@color/md_white_1000"
                                        android:textSize="@dimen/text_size_buttons" />


                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".5"
                                    android:background="@color/blue_workplace" />

                                <TextView
                                    android:id="@+id/tv_penalties_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="2"
                                    android:textColor="@color/blue_workplace"
                                    android:textSize="@dimen/title_text_size" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".5"
                                    android:background="@color/blue_workplace" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="20dp"
                                android:paddingTop="20dp">

                                <TextView
                                    android:id="@+id/tv_second_violation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Violation of numbers 2, 4, 6"
                                    android:textColor="@color/blue_workplace"
                                    android:textSize="@dimen/text_size_buttons" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="20dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2">

                                    <TextView
                                        android:id="@+id/tv_penalties_2_first_offense"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".3"
                                        android:text="First Offense"
                                        android:textColor="@color/blue_workplace"
                                        android:textSize="@dimen/text_size_buttons" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".3"
                                    android:background="#f16325"
                                    android:gravity="center|left">

                                    <TextView
                                        android:id="@+id/tv_penalties_2_first_offense_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:paddingLeft="10dp"
                                        android:text="Dismissal"
                                        android:textColor="@color/md_white_1000"
                                        android:textSize="@dimen/text_size_buttons" />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".5"
                                    android:background="@color/blue_workplace" />

                                <TextView
                                    android:id="@+id/tv_penalties_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="3"
                                    android:textColor="@color/blue_workplace"
                                    android:textSize="@dimen/title_text_size" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:layout_weight=".5"
                                    android:background="@color/blue_workplace" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="20dp"
                                android:paddingTop="20dp">

                                <TextView
                                    android:id="@+id/tv_third_violation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Violation of numbers 12"
                                    android:textColor="@color/blue_workplace"
                                    android:textSize="@dimen/text_size_buttons" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="20dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2">


                                    <TextView
                                        android:id="@+id/tv_penalties_3_first_offense"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".3"

                                        android:paddingRight="3dp"
                                        android:text="First Offense"
                                        android:textColor="@color/blue_workplace"
                                        android:textSize="@dimen/text_size_buttons" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".3"
                                    android:background="#f16325"
                                    android:gravity="center|left">

                                    <TextView
                                        android:id="@+id/tv_penalties_3_first_offense_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="center"
                                        android:paddingLeft="10dp"
                                        android:text="Written reprimand"
                                        android:textColor="@color/md_white_1000"
                                        android:textSize="@dimen/text_size_buttons" />


                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2">

                                    <TextView
                                        android:id="@+id/tv_penalties_3_second_offense"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".3"
                                        android:paddingRight="3dp"
                                        android:text="Second Offense"
                                        android:textColor="@color/blue_workplace"
                                        android:textSize="@dimen/text_size_buttons" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".3"
                                    android:background="#f8991d"
                                    android:gravity="center|left">

                                    <TextView
                                        android:id="@+id/tv_penalties_3_second_offense_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="center"
                                        android:paddingLeft="10dp"
                                        android:text="1-3 days suspension"
                                        android:textColor="@color/md_white_1000"
                                        android:textSize="@dimen/text_size_buttons" />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tv_penalties_3_third_offense"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".3"
                                        android:paddingRight="3dp"
                                        android:text="Third Offense"
                                        android:textColor="@color/blue_workplace"
                                        android:textSize="@dimen/text_size_buttons" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".3"
                                    android:background="#f16325"
                                    android:gravity="center|left">

                                    <TextView
                                        android:id="@+id/tv_penalties_3_third_offense_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:paddingLeft="10dp"
                                        android:text="5 days suspension"
                                        android:textColor="@color/md_white_1000"
                                        android:textSize="@dimen/text_size_buttons" />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tv_penalties_3_four_offense"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".3"

                                        android:paddingRight="3dp"
                                        android:text="Fourth Offense"
                                        android:textColor="@color/blue_workplace"
                                        android:textSize="@dimen/text_size_buttons" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".3"
                                    android:background="#f8991d"
                                    android:gravity="center|left">

                                    <TextView
                                        android:id="@+id/tv_penalties_3_four_offense_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:paddingLeft="10dp"
                                        android:text="7 days suspension"
                                        android:textColor="@color/md_white_1000"
                                        android:textSize="@dimen/text_size_buttons" />


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>
                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".02"
            android:orientation="horizontal">


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>